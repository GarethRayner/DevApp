<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.devapp.DeleteUser">

    <TextView android:text="@string/delete_label"
        android:id="@+id/delete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_title"
        android:id="@+id/delete_entry"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_entry"
        android:text="@string/delete_max_button"
        android:layout_marginTop="10dp"
        android:onClick="deleteUser"/>
</RelativeLayout>
