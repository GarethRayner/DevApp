<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_title"
            android:text="@string/select_title"
            android:textSize="25sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/articles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:background="#694434">
        <fragment
            android:name="com.mycompany.devapp.article_duck_select"
            android:id="@+id/article_ducks"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            tools:layout="@layout/article_duck_select" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/article_ducks"
            android:background="#5A301E" />

        <fragment
            android:name="com.mycompany.devapp.article_geese_select"
            android:id="@+id/article_geese"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/article_ducks"
            tools:layout="@layout/article_geese_select" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/article_geese"
            android:background="#5A301E" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_below="@id/articles"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/divisor"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:background="#000000" />
        <Button
            android:id="@+id/artSlide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divisor"
            android:text="@string/article_slider_button"
            android:onClick="articleSlider"/>
        <Button
            android:id="@+id/newArt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/artSlide"
            android:text="@string/title_activity_new_art"
            android:onClick="newArt"/>
        <Button
            android:id="@+id/freePress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newArt"
            android:text="@string/free_press_button"
            android:onClick="freeP"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/freePress"
            android:text="@string/title_activity_news_pub"
            android:onClick="newsP"/>
    </RelativeLayout>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_verify_app_button"
        android:onClick="verifyApp"/>
</RelativeLayout>